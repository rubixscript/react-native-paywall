{
  "name": "@rubixscript/react-native-paywall",
  "version": "1.0.0",
  "description": "A comprehensive React Native paywall library with subscription management and promo code support",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "paywall",
    "subscription",
    "promo-code",
    "revenuecat",
    "in-app-purchase",
    "monetization",
    "expo",
    "react"
  ],
  "author": "RubixScript Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubixscript/react-native-paywall.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "expo": ">=48.0.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": ">=1.19.0",
    "expo-linear-gradient": "~15.0.7",
    "react-native-purchases": "^7.0.0",
    "@expo/vector-icons": "^15.0.2"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "@types/react-native": "^0.73.0",
    "@types/jest": "^29.5.0",
    "typescript": "~5.9.2",
    "rollup": "^3.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "jest": "^29.0.0",
    "@testing-library/react-native": "^12.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components.esm.js",
      "require": "./dist/components.js",
      "types": "./dist/components.d.ts"
    },
    "./services": {
      "import": "./dist/services.esm.js",
      "require": "./dist/services.js",
      "types": "./dist/services.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.esm.js",
      "require": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./types": {
      "import": "./dist/types.esm.js",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}